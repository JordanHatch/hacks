#content {
	.migrate_rs {
		a, a:link, a:visited {
			background: #f4f4f4 url(<%= asset_path 'go.png' %>) no-repeat 15px center;
			display: inline-block;
			font-size: 1.2em;
			padding: 1em 1.1em 1em 50px;
		}
		a:hover, a:active { background-color: #eaeaea;	}
	}

	.all_projects, .winners {
		h2 { font-size: 1.7em; color: #444; font-weight: bold; font-family: Helvetica, Arial, sans-serif; }
	}

	.projects, .winners {

		ul { margin: 0; }
		li { list-style: none; background: #eee; min-height: 83px; border: 1px solid #ddd; margin-bottom: 1em; display: block; padding: 0.9em;
			.right { width: 780px; }

			.image a { width: 140px; height: 83px; background: #fff; display: block; border: 1px solid #ccc;
				img { background: #fff; padding: 0; border: 0; width: 140px; height: 83px; }
			}
			h3 { font-size: 1.5em; display: inline-block; margin: 0.2em 0 0.3em;
				a { text-decoration: none; color: #444; }
				a:hover, a:active { color: #222; }
			}
			.project_team { display: inline-block; font-family: 'Bitter', Helvetica, Arial, sans-serif; font-size: 1.2em; color: #888; }
			.project_award { background: no-repeat left center; padding-left: 20px; font-size: 1.1em; font-weight: bold; margin: 0.1em 0 0.4em; }

			.project_award.award_overall.level_1 { background-image: url(<%= asset_path 'icons/mini_first_overall.png' %>); color: #C6A053; }
			.project_award.award_overall.level_2 { background-image: url(<%= asset_path 'icons/mini_second_overall.png' %>); color: #aaa; }
			.project_award.award_mention { background-image: url(<%= asset_path 'icons/mini_special_mention.png' %>); color: #86659A; }
			.project_award.award_finalist { padding-left: 0; color: #666; }

			.project_summary { font-size: 1.2em; color: #666; }
		}
		li.award_overall.level_1 { background: #FFF4E6; border-color: #C6A053; }
		li.award_mention { background: #EDE7FF; border-color: #86659A; }

	}

	ul.centre_list {
		margin: 0;
		li { display: inline-block; vertical-align: top; list-style: none; width: 316px; margin-bottom: 0.4em;
			a { background: #f4f4f4; min-height: 4.6em; color: #fff; font-size: 1.2em; display: block; padding: 0.8em; text-decoration: none;
				h3 { font-size: 1.3em; margin-bottom: 0.2em; line-height: 1.2em; color: #555; }
				span { font-size: 1em; color: #777;}
				&:hover { background: #eaeaea; h3 { color: #444; } }
			}
		}
	}

	.centres {
		margin-top: 1em;

		> a { background: #B63322; color: #fff; display: block; margin-bottom: 1em; padding: 0.7em 0.7em 0.65em; font-size: 1.2em; text-decoration: none;
			&:hover { background: #9f2c1e };
		}

		ul.centre_selection {
			width: 220px;
			float: left;
			margin: 0;

			li {
				list-style: none;
				margin: 0;
				&:first-child a { border-top: 1px solid #ddd; }

				a { background: #fafafa; padding: 0.75em; text-decoration: none; color: #888; border-bottom: 1px solid #ddd; border-right: 1px solid #bbb; font-size: 1.1em; display: block; }
				a:hover, a:active { background: #eee; }
				&.selected {
					a { border-right: none; color: #000; font-weight: bold; font-size: 1.1em; background: #ffffff; }
					a:hover, a:active { background: #fff; }
				}
			}
		}
		.projects { width: 725px; margin-top: 1em; float: right;
			h2 { margin: 0 0 0.75em; }
			li .right { width: 540px; }
		}
	}
}
