<% content_for(:title) { "#{@project.title} - #{@event.title}" } %>
<div id="project_control">
    <div class="left"><h1><%= @project.title %></h1> <h2>by <%= @project.team %></h2></div>
	<div class="right"><%= link_to "Edit project", edit_event_project_url(@event,@project), :class => 'action' %></div> 
	<div class="clear"></div>
    
    <div class="feature">                            
    
    </div>
    <div class="intro">  
        <div class="inner">
            <%= truncate @project.description, :length => 195 %>
            <%= link_to "Read more", "#description", :class => "more" %>
        </div>
    </div>                                                              
    <div class="links">
        <div class="inner">
            <ul>
                <li class="icon_url">Project URL: <%= link_to @project.format_url(@project.url), @project.url rescue "<em>None</em>".html_safe %></li>
                
                <% if @project.github_url -%><li class="icon_github">GitHub: <%= link_to @project.formatted_github_url, @project.github_url %></li>
                <% elsif @project.svn_url -%><li class="icon_code">SVN URL: <%= link_to @project.format_url(@project.svn_url), @project.svn_url %></li>
                <% elsif @project.code_url -%><li class="icon_code">Code URL: <%= link_to @project.format_url(@project.code_url), @project.code_url %></li><% end -%>             
                
                <% if @project.twitter -%><li class="icon_twitter">Twitter: <%= twitter_links_for(@project) %></li><% end -%>
            </ul>
        </div>
    </div>
    <div class="clear"></div>
                      
    <% if @project.has_won_prize? -%>                                                   
        <% @project.award_categories.each do |award| -%>
            <div class="award award_<%= award.format %> <%= (award.level.nil?) ? "" : "level_#{award.level}" %>">
                <p class="summary"><%= @project.title %> <%= award.project_action %> <strong><%= award.title %></strong> at <%= @event.title %>!</p>
                <% if award.description -%><p class="description"><%= award.description %></p><% end -%>
            </div>                                            
        <% end -%>
    <% end -%> 
    
    <div class="column left">
        
    </div>                 
    <div class="column right">
        <div id="description">
            <%= @project.description %>
        </div>
        <% if @project.data -%>
            <div class="markdown_box project_data">
                <h3>About the data used in <%= @project.title %></h3>
                <%= @project.data %>
            </div>
        <% end -%>
        <% if @project.ideas -%>
            <div class="markdown_box project_ideas">
                <h3>Ideas for taking <%= @project.title %> forwards</h3>
                <%= @project.ideas %>
            </div>
        <% end -%>                  
        <% if @project.costs -%>
            <div class="markdown_box project_costs">
                <h3>Estimated costs to take <%= @project.title %> forwards</h3>
                <%= @project.costs %>
            </div>
        <% end -%>        
    </div>          
    <div class="clear"></div>
    
</div>